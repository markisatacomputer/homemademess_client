div.navvy
  div.menu.container
    md-fab-speed-dial.md-fling(md-direction="down" md-open="menuOpen")
      md-fab-trigger
        md-button(aria-label="Menu" class="md-fab")
          md-icon.material-icons menu

      md-fab-actions
        md-button(ng-repeat="item in getMenu()" aria-label="{{item.label}}" class="md-fab md-raised md-mini" ng-click="this[item.action](item.arg)")
          md-tooltip(md-direction="left") {{item.label}}
          md-icon.material-icons {{item.src}}
