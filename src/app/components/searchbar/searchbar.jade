div.navvy(ng-class="{home: isActive('/')}")
  div#search
    tags-input(ng-model="tags", template="tag-temp.html", title="Tags", placeholder="search by tag", replace-spaces-with-dashes="false", on-tag-added="redoSearch()", on-tag-removed="redoSearch()" ng-show="isActive('/')")
      auto-complete(source="findTags($query)" min-length="1")

    script(type="text/ng-template" id="tag-temp.html")
      span
        a(ng-bind="$getDisplayText()" ui-sref="tagged({ tag : '{{ data['text'] | taglink }}' })")
      a(class="remove-button", ng-click="$removeTag()", ng-bind="::$$removeTagSymbol")

